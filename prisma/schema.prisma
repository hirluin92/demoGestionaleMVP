generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String            @id @default(cuid())
  email                  String            @unique
  password               String
  name                   String
  phone                  String?
  role                   UserRole          @default(CLIENT)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  resetToken             String?
  resetTokenExpiry       DateTime?
  collaborationStartDate DateTime?
  bookingReminders       Boolean           @default(true)
  emailNotifications     Boolean           @default(true)
  loginAlerts            Boolean           @default(true)
  measurementUpdates     Boolean           @default(true)
  sessionTimeout         Int               @default(30)
  measurements           BodyMeasurement[]
  bookings               Booking[]
  packages               Package[]         // Relazione uno-a-molti (per compatibilità)
  userPackages           UserPackage[]      // Relazione molti-a-molti
  workoutPlans           WorkoutPlan[]

  @@index([email])
  @@index([resetToken])
  @@map("users")
}

model Package {
  id              String        @id @default(cuid())
  userId          String?       // Opzionale per compatibilità con dati esistenti
  name            String
  totalSessions   Int
  usedSessions    Int           @default(0)
  durationMinutes Int           @default(60)
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  bookings        Booking[]
  user            User?         @relation(fields: [userId], references: [id], onDelete: Cascade) // Relazione uno-a-molti (per compatibilità)
  userPackages    UserPackage[] // Relazione molti-a-molti

  @@index([userId, isActive])
  @@index([userId])
  @@map("packages")
}

model UserPackage {
  id            String   @id @default(cuid())
  userId        String
  packageId     String
  usedSessions  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  package       Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@unique([userId, packageId])
  @@index([userId])
  @@index([packageId])
  @@map("user_packages")
}

model Booking {
  id              String        @id @default(cuid())
  userId          String
  packageId       String
  date            DateTime
  time            String
  status          BookingStatus @default(CONFIRMED)
  durationMinutes Int?          // Durata personalizzata per questa prenotazione (override del pacchetto)
  googleEventId   String?       @unique
  reminderSent    Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  package         Package       @relation(fields: [packageId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([date, status])
  @@index([date, time, status])
  @@index([googleEventId])
  @@map("bookings")
}

model GoogleCalendar {
  id           String   @id @default(cuid())
  calendarId   String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([calendarId])
  @@map("google_calendars")
}

model BodyMeasurement {
  id              String   @id @default(cuid())
  userId          String
  measurementDate DateTime @default(now())
  peso            Float?
  altezza         Float?  // Altezza
  massaGrassa     Float?  // % Massa Grassa
  braccio         Float?  // Circonferenza braccio
  spalle          Float?  // Circonferenza spalle
  torace          Float?
  vita            Float?
  gamba           Float?  // Circonferenza gamba
  fianchi         Float?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, measurementDate])
  @@index([userId])
  @@map("body_measurements")
}

model ExerciseCategory {
  id        String     @id @default(cuid())
  name      String     @unique
  sortOrder Int        @default(0)
  exercises Exercise[]
  createdAt DateTime   @default(now())

  @@map("exercise_categories")
}

model Exercise {
  id         String           @id @default(cuid())
  name       String
  categoryId String
  equipment  String?
  isDefault  Boolean          @default(false)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  category   ExerciseCategory @relation(fields: [categoryId], references: [id])
  workoutExercises WorkoutExercise[]

  @@unique([name, categoryId])
  @@index([categoryId])
  @@index([name])
  @@map("exercises")
}

model WorkoutPlan {
  id          String       @id @default(cuid())
  userId      String
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  days        WorkoutDay[]

  @@index([userId, isActive])
  @@index([userId])
  @@map("workout_plans")
}

model WorkoutDay {
  id            String            @id @default(cuid())
  workoutPlanId String
  dayNumber     Int
  name          String
  notes         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  workoutPlan   WorkoutPlan       @relation(fields: [workoutPlanId], references: [id], onDelete: Cascade)
  exercises     WorkoutExercise[]

  @@index([workoutPlanId])
  @@map("workout_days")
}

model WorkoutExercise {
  id           String     @id @default(cuid())
  workoutDayId String
  orderIndex   Int
  exerciseId   String?
  name         String
  sets         Int
  reps         String
  weight       String?
  restSeconds  Int?
  tempo        String?
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  workoutDay   WorkoutDay @relation(fields: [workoutDayId], references: [id], onDelete: Cascade)
  exercise     Exercise?  @relation(fields: [exerciseId], references: [id])

  @@index([workoutDayId, orderIndex])
  @@index([exerciseId])
  @@map("workout_exercises")
}

enum UserRole {
  CLIENT
  ADMIN
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  COMPLETED
}
